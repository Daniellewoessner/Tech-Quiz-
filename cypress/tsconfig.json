{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "types": ["cypress", "node"],
      "isolatedModules": false,
      "noEmit": true,
      "jsx": "react-jsx",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "strict": true,
      "moduleResolution": "node"
    },
    "include": [
      "cypress/**/*.ts",
      "cypress/**/*.tsx",
      "../client/src/components/**/*.tsx",
      "../client/src/services/**/*.ts",
      "../client/src/models/**/*.ts"
    ]
  }